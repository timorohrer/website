<!DOCTYPE html>
<html {{#if language}}lang="{{language}}"{{else}}lang="en"{{/if}}>
<head>
    <meta charset="utf-8">
    <title>Timo Rohrer </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="keywords" content="{{ site.keywords }}, {{#if keywords}}{{ keywords }},{{/if}}{{#if type}}{{ type }}{{/if}}"/>
    <meta name="description" content="{{#if blurb}}{{ blurb }}{{else}}{{#if description}}{{ description }}{{else}}{{ site.description }}{{/if}}{{/if}}" />
    <meta name="author" content="{{ site.author }}">
    <meta name="referrer" content="never" />
    {{#if img}}
    <meta property="og:image" content="/{{ img }}" />
    {{/if}}
    <link rel="stylesheet" href="/assets/css/main.css" type="text/css" media="all">
    <link rel="stylesheet" href="//brick.a.ssl.fastly.net/Karla:400,400i,700, 700i">
    <link rel="stylesheet" href="//brick.a.ssl.fastly.net/Cormorant:400,400i,700, 700i">
    <link rel="icon" href="/assets/img/favicon.ico" />
</head>
<body>
    <div id="wrapper">
        <header class="home">
            <span class="name">
                <a href="/">Timo Rohrer</a> 
            </span>
            <span class="navbar">
            <a href="/">blog</a>
            / <a href="https://github.com/timorohrer">github</a> 
            / <a href="/resume">resume</a> 
            </span>
        </header>
        <ul class="recent">
            {{#each posts }}
            <li>
                <span class="meta">{{ moment date lang="en" format="YYYY-MM-DD" }}</span>
                <span class="title"><a href="/{{ path }}">{{ title }}</a></span>
            </li>
            {{/each}}
        </ul>
    </div>
</body>
</html>

